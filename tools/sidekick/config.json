{
  "plugins": [
    {
      "id": "form-editor-preview",
      "title": "Edit Form",
      "event": "editform",
      "environments": ["preview"]
    },
    {
      "id": "form-creator",
      "title": "Create Form",
      "url": "/tools/sidekick/formbuilder.html",
      "environments": ["edit"],
      "passConfig": true,
      "passReferrer": true
    },
    {
      "id": "form-editor-docx",
      "title": "Edit Form",
      "url": "/tools/sidekick/formbuilder.html?action=edit",
      "environments": ["edit"],
      "passConfig": true,
      "passReferrer": true,
      "isPalette": true,
      "paletteRect": "top: auto; bottom: 25px; left: 5px; width: 300px; height: calc(100% - 200px); border-radius: var(--hlx-sk-button-border-radius); overflow: hidden; resize: horizontal;",
      "includePaths": ["**.docx**"]
    }
  ]
}
